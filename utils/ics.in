(use-modules (ice-9 getopt-long)
             (ice-9 eval-string)
             ((ice-9 pretty-print)
              #:renamer (symbol-prefix-proc 'ice-9:))
             (srfi srfi-41)
             (ics)
             (ics version)
             (ics object)
             (ics common)
             (ics cli common)
             (ics cli command-describe)
             (ics cli command-convert)
             (ics conv))

(define (print-version)
  (format #t "ics ~a~%" (ics-version/string))
  (display "\
Copyright (C) 2016-2022 Artyom V. Poptsov <poptsov.artyom@gmail.com>
License GPLv3+: GNU GPL version 3 or later <https://gnu.org/licenses/gpl.html>.
This is free software: you are free to change and redistribute it.
There is NO WARRANTY, to the extent permitted by law.

Written by Artyom V. Poptsov.
"))

(define (print-help-and-exit)
  (display "\
Usage ics [options]

The default behaviour of the program is to read iCalendar stream from
stdin and handle it according to the specified options.

Options:
  --help, -h                 Print this message and exit.
  --version                  Print Guile-ICS version.
  --pretty-print, -p <indent>
                             Pretty-print iCalendar stream to the
                             stdout.
  --to-org-mode              Convert iCalendar data to org-mode format.
")
  (exit))

(define %commands
  `((("describe")               ,command-describe)
    (("convert")                ,command-convert)
    (("--version" "version")    ,(lambda (rest)
                                   (print-version)))
    (("help", "--help", "-h")   ,(lambda (rest)
                                   (print-help-and-exit)))))


(ics-debug-set! #f)


;;; Entry point.

(define (main args)

  (when (< (length args) 2)
    (print-help-and-exit))

  (let* ((command (cadr args))
         (rest    (cons (car args) (cddr args)))
         (handler (command-match command %commands)))
    (if handler
        (handler rest)
        (begin
          (format (current-error-port) "Unknown command: ~a~%" command)
          (print-help-and-exit)))))

